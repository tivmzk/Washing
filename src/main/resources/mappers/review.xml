<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="review">
	<sql id="search">
		<where>
			<if test="search == 1">
				email LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="search == 2">
				title LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="search == 3">
				contents LIKE CONCAT('%', #{keyword}, '%')
			</if>
		</where>
	</sql>

	<insert id="add">
		INSERT INTO review
		VALUES(NULL, #{email}, #{title}, #{contents}, NOW())
	</insert>
	<select id="item" resultType="Review">
		SELECT *
		FROM review
		WHERE rcode=#{rcode}
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM review
		<include refid="search" />
	</select>
	<select id="list" resultType="Review">
		SELECT *
		FROM review
		<include refid="search" />
		LIMIT #{offset}, #{perPage}
	</select>
	<delete id="delete">
		DELETE FROM review
		WHERE rcode=#{rcode}
	</delete>
	<update id="update">
		UPDATE review
		SET
		title=#{title},
		contents=#{contents}
		WHERE rcode=#{rcode}
	</update>
</mapper>